<div class="bg-dark" style="height: 70px;">
  <h2 class="text-center text-white" style="padding-top: 10px;">All India Greviance Redressal App</h2>
</div>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-key"></i>  Forgot Password</h1>
      <form action="/forgot" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Reset</button>
        <br>
        <%if (msg){ %>
          <p class="text-danger text-center">
            <%= msg %>
          </p>
        <% } %>
        <a href="users/login"><i class="fas fa-arrow-left"></i> Back to Login</a>
      </form>
    </div>
  </div>
</div>
