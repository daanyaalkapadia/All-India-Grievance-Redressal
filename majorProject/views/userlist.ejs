<!-- tables -->
<section>
  <div class="container-fluid">
    <div class="row mb-5">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
        <table class="table table-striped bg-light text-center">
          <h3 class="padding-top-xl text-center">Admin of different states</h3>
          <thead>
            <tr class="text-muted">
              <th>Sr.No.</th>
              <th>Name</th>
              <th>Region</th>
              <th>Mobile</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<userArray.length ;i++){ %>
              <tr>
                <td><%= i+1 %></td>
                <% for(var j=0;j<4;j++){ %>
                  <% if(j==3){ %>
                    <td>
                      <a href="https://mail.google.com/mail/u/0/?view=cm&fs=1&to=<%= userArray[i][j]%>" target="_blank">
                        <button type="button" class="btn btn-outline-dark">E-mail</button>
                      </a>
                    </td>
                  <% }else{ %>
                    <td><%= userArray[i][j] %></td>
                  <% } %>
                <% } %>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div> 
    </div> 
  </div>
</section>   

